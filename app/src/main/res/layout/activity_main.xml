<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.jongholee.myapplication.MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:text="Hello James"
            tools:layout_editor_absoluteY="54dp" tools:layout_editor_absoluteX="153dp"
            android:id="@+id/display_textview"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:text="Enter me!"
            android:ems="10"
            tools:layout_editor_absoluteX="85dp" android:id="@+id/input_editText"
            app:layout_constraintTop_toBottomOf="@+id/display_textview" android:layout_marginTop="124dp"/>
    <Button
            android:text="Click me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="148dp" android:id="@+id/click_btn" android:layout_marginTop="84dp"
            app:layout_constraintTop_toBottomOf="@+id/input_editText"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_begin="20dp"/>

</android.support.constraint.ConstraintLayout>
